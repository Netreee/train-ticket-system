        {
            "label": "build test",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-Wall",
                "-g",
                "-I.",
                "test_scheduler.cpp",
                "TrainScheduler.cpp",
                "SchedulerManager.cpp",
                "-o",
                "test_scheduler"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$gcc"
        },
        {
